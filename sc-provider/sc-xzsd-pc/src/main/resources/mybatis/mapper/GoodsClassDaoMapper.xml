<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xzsd.pc.goodsclass.dao.GoodsClassDao">

    <!--新增商品分类-->
    <insert id="saveGoodsClass" parameterType="com.xzsd.pc.goodsclass.entity.GoodsClassInfo">
        insert into
        t_goods_class
        (class_code,
        class_name,
        last_class_code,
        remark,
        class_level,
        is_deleted,
        create_name,
        create_time,
        version
        )
        values
        (#{classCode},
        #{className},
        #{lastClassCode},
        #{remark},
        #{classLevel},
        #{isDeleted},
        #{createName},
        now(),
        0
        )
    </insert>

    <!--修改商品分类信息-->
    <update id="updateGoodsClass" parameterType="com.xzsd.pc.goodsclass.entity.GoodsClassInfo">
        update t_goods_class
        set
            class_name = #{className},
            remark = #{remark},
            update_name = #{updateName},
            update_time = now(),
            version = version + 1
        where class_code = #{classCode}
        and version = #{version}
    </update>

